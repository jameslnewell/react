{
  "name": "react-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "babel": {
    "presets": ["@jameslnewell/babel-config"]
  },
  "eslintConfig": {
    "extends": "@jameslnewell/eslint-config/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/src/**/*.tests.ts?(x)"
    ],
    "testEnvironment": "node"
  },
  "prettier": "@jameslnewell/prettier-config",
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "publish-if-not-published": "^2.2.0",
    "@babel/core": "^7.12.10",
    "@jameslnewell/babel-preset": "^2.1.0",
    "@jameslnewell/eslint-config": "^0.16.0",
    "@jameslnewell/jest-preset-test": "^6.0.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@preconstruct/cli": "^2.0.1",
    "@types/jest": "^26.0.20",
    "babel-loader": "^8.2.2",
    "eslint": "^7.17.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "setup": "preconstruct dev",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx}'",
    "format:check": "prettier --check '**/*.{js,json,md,ts,tsx}'",
    "lint": "eslint --ext .ts,.tsx . --fix",
    "type": "tsc --noEmit --project tsconfig.json",
    "test": "jest",
    "build": "preconstruct build"
  }
}
