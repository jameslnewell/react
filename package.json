{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "storybook"
    ]
  },
  "babel": {
    "presets": [
      "@jameslnewell/babel-config"
    ]
  },
  "eslintConfig": {
    "extends": "@jameslnewell/eslint-config/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "prettier": "@jameslnewell/prettier-config",
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.16",
    "@jameslnewell/babel-preset": "^2.2.0",
    "@jameslnewell/eslint-config": "^0.17.2",
    "@jameslnewell/jest-preset": "^2.1.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@manypkg/cli": "^0.17.0",
    "@preconstruct/cli": "^2.0.1",
    "@types/jest": "^26.0.20",
    "babel-loader": "^8.2.2",
    "eslint": "^7.20.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "publish-if-not-published": "^2.2.0",
    "typescript": "^4.1.5"
  },
  "scripts": {
    "postinstall": "preconstruct dev",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/*/dist",
    "clean:node_modules": "rm -rf node_modules/ packages/*/node_modules",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx}'",
    "check:dependencies": "manypkg check",
    "check:typing": "tsc --noEmit --project tsconfig.json",
    "check:linting": "eslint --ext .ts,.tsx .",
    "check:formatting": "prettier --check '**/*.{js,json,md,ts,tsx}'",
    "check": "yarn run check:dependencies && yarn run check:typing && yarn run check:linting && yarn run check:formatting",
    "build": "preconstruct build",
    "test": "jest",
    "start": "yarn workspace storybook run start",
    "prepare-release": "yarn run build && yarn run test && yarn run check:*"
  }
}
