{
  "name": "react-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "eslintConfig": {
    "extends": "@jameslnewell/eslint-config/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/src/**/*.tests.ts?(x)"
    ],
    "testEnvironment": "node"
  },
  "prettier": "@jameslnewell/prettier-config",
  "scripts": {
    "setup": "preconstruct dev",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx}'",
    "format:check": "prettier --check '**/*.{js,json,md,ts,tsx}'",
    "lint": "eslint --ext .ts,.tsx . --fix",
    "type": "tsc --noEmit --project tsconfig.json",
    "test": "dotenv -e .env jest"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "publish-if-not-published": "^2.2.0"
  }
}
