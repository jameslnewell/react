{
  "name": "@jameslnewell/react-firebase",
  "version": "0.11.0-preview.1",
  "description": "ðŸŽ£ React hooks for working with firebase.",
  "main": "dist/react-firebase.cjs.js",
  "module": "dist/react-firebase.esm.js",
  "keywords": [
    "firebase",
    "react",
    "hooks",
    "firestore",
    "auth",
    "storage",
    "google"
  ],
  "repository": "jameslnewell/react-firebase",
  "sideEffects": false,
  "files": [
    "dist",
    "app",
    "auth",
    "firestore",
    "storage"
  ],
  "dependencies": {
    "@jameslnewell/observable": "^1.3.0",
    "@jameslnewell/react-observable": "^2.0.0-preview.11",
    "@jameslnewell/react-promise": "^3.3.0"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0",
    "firebase": "^8.2.2",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@firebase/testing": "^0.20.11",
    "@jameslnewell/babel-preset": "^2.1.0",
    "@jameslnewell/eslint-config": "^0.16.0",
    "@jameslnewell/jest-preset-test": "^6.0.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@preconstruct/cli": "^2.0.1",
    "@storybook/react": "^6.1.11",
    "@testing-library/react-hooks": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "babel-loader": "^8.2.2",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.17.0",
    "firebase": "^8.2.2",
    "firebase-tools": "^9.2.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.1.3",
    "webpack": "^4.42.1"
  },
  "eslintConfig": {
    "extends": "@jameslnewell/eslint-config/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/src/**/*.tests.ts?(x)"
    ],
    "testEnvironment": "node"
  },
  "preconstruct": {
    "entrypoints": [
      "app/index.tsx",
      "auth/index.ts",
      "firestore/index.ts",
      "storage/index.ts"
    ]
  },
  "prettier": "@jameslnewell/prettier-config",
  "scripts": {
    "setup": "preconstruct dev",
    "clean": "rm -rf dist",
    "format": "prettier --write '**/*.{js,json,md,ts,tsx}'",
    "format:check": "prettier --check '**/*.{js,json,md,ts,tsx}'",
    "lint": "eslint --ext .ts,.tsx . --fix",
    "type": "tsc --noEmit --project tsconfig.json",
    "start": "start-storybook -p 1234",
    "build:preconstruct": "preconstruct build",
    "build:storybook": "build-storybook",
    "build": "yarn run build:preconstruct && yarn run build:storybook",
    "emulate": "firebase emulators:start --only firestore",
    "test": "dotenv -e .env jest",
    "prepublishOnly": "yarn run clean && yarn run lint && yarn run type && yarn run test && yarn run build"
  },
  "license": "MIT"
}
