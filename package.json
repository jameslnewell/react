{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*",
      "storybook"
    ]
  },
  "babel": {
    "presets": [
      "@jameslnewell/babel-config"
    ]
  },
  "eslintConfig": {
    "extends": "@jameslnewell/eslint-config/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/tools/*"
    ]
  },
  "prettier": "@jameslnewell/prettier-config",
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@jameslnewell/babel-preset": "^2.2.0",
    "@jameslnewell/eslint-config": "^0.17.2",
    "@jameslnewell/jest-preset": "^2.1.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@types/jest": "^26.0.20",
    "babel-loader": "^8.2.2",
    "eslint": "^7.20.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "publish-if-not-published": "^2.2.0",
    "typescript": "^4.3.5",
    "yarn-deduplicate": "^3.1.0"
  },
  "resolutions": {
    "rxjs": "^7.1.0"
  },
  "scripts": {
    "setup": "yarn workspaces foreach run setup",
    "fix": "run-s fix:*",
    "fix:constraints": "yarn constraints --fix",
    "fix:formatting": "prettier --write '**/*.{md,json,yml,js,ts,tsx}'",
    "fix:linting": "eslint --ext .js,.ts,.tsx .",
    "check": "run-s check:*",
    "check:constraints": "yarn constraints",
    "check:formatting": "prettier --check '**/*.{md,json,yml,js,ts,tsx}'",
    "check:linting": "eslint --ext .ts,.tsx .",
    "check:typing": "tsc --noEmit --project tsconfig.json",
    "build": "yarn workspaces foreach run build",
    "test": "jest",
    "develop": "yarn workspace storybook run develop",
    "prepare-release": "yarn run build && yarn run test && yarn run check:*"
  }
}
