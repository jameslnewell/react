{
  "extends": "./node_modules/@jameslnewell/typescript-config/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "testing-utilities": ["packages/testing-utilities/src"],
      "@jameslnewell/react-mounted": ["packages/react-mounted/src"],
      "@jameslnewell/react-promise": ["packages/react-promise/src"],
      "@jameslnewell/react-observable": ["packages/react-observable/src"]
    }
  },
  "exclude": ["packages/react-firebase"],
  "include": ["packages/*/src"]
}
