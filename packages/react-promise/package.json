{
  "name": "@jameslnewell/react-promise",
  "version": "1.0.0",
  "description": "A react hook for working with promises.",
  "keywords": [
    "react", "hooks", "react-hook", "promise", "react-promise", "promises", "resolve", "reject", "jameslnewell"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.4",
    "@jameslnewell/babel-preset": "^1.0.1",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.3.0",
    "@jameslnewell/jest-preset-lint": "^1.0.0",
    "@jameslnewell/jest-preset-test": "^1.0.0",
    "@jameslnewell/jest-preset-type": "^1.0.0",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^2.0.2",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@types/jest": "^24.0.13",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "eslint": "^5.15.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "check:lint": "eslint --ext .ts,.js src",
    "check:types": "tsc",
    "check": "yarn run check:lint && yarn run check:types",
    "build:types": "tsc --project tsconfig.types.json",
    "build:esm": "babel --extensions '.ts,.tsx' --out-dir lib --ignore 'src/**/*.test.ts' src",
    "build": "yarn run build:types && yarn run build:esm",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
